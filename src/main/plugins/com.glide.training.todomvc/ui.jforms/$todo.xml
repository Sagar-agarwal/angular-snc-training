<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:g2="null" xmlns:j2="null">
	<g:evaluate>
		GlideCacheManager.disable('syscache_realform');
		GlideCacheManager.disable('syscache_jelly_script');
		GlideCacheManager.disable('syscache_jelly_ui_jtemplates');
		GlideCacheManager.disable('syscache_jelly_template');
	</g:evaluate>
	<g2:doctype name="html" />
	<j2:whitespace trim="false">
	<html lang="en" ng-app="todo">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<title>ServiceNow Angular Training • TodoMVC</title>
		<link rel="stylesheet" href="styles/todomvc.css" />
	</head>
	<body  ng-controller="Todo">
		<section id="todoapp">
			<header id="header">
				<h1>todos</h1>
				<form ng-submit="addTask()">
					<input id="new-todo" placeholder="What needs to be done?" autofocus="true" autocomplete="off" ng-model="taskInput" />
				</form>
			</header>
			<!-- This section should be hidden by default and shown when there are todos -->
			<section id="main">
				<input id="toggle-all" type="checkbox" ng-model="toggleAllCompleted" />
				<label for="toggle-all">Mark all as complete</label>
				<ul id="todo-list">
					<!-- These are here just to show the structure of the list items -->
					<!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
					<li ng-class="{completed : task.complete, editing : task === taskBeingEdited }"
						ng-repeat="task in taskList | filter:statusMask"
						ng-dblclick="editTask(task)">
						<div class="view">
							<input class="toggle" type="checkbox" checked="true" ng-model="task.complete" />
							<label ng-bind="task.title" />
							<button class="destroy" ng-click="deleteTask(task)"/>
						</div>
						<input class="edit" ng-model="task.title" />
					</li>
				</ul>
			</section>
			<!-- This footer should hidden by default and shown when there are todos -->
			<footer id="footer" ng-show="hasTasks">
				<!-- This should be `0 items left` by default -->
				<span id="todo-count">
					<strong ng-bind="incompleteTaskCount"></strong>
					<ng-pluralize count="incompleteTaskCount"
								  when="{ one : 'item', other : 'items' }" /> left
				</span>
				<!-- Remove this if you don't implement routing -->
				<ul id="filters">
					<li>
						<a ng-class="{selected : path === '/' }" href="#/">All</a>
					</li>
					<li>
						<a ng-class="{selected : path === '/active' }" href="#/active">Active</a>
					</li>
					<li>
						<a ng-class="{selected : path === '/completed' }" href="#/completed">Completed</a>
					</li>
				</ul>
				<!-- Hidden if no completed items are left ↓ -->
				<button id="clear-completed" ng-show="completedTaskCount" ng-click="deleteCompleted()">Clear completed ({{ completedTaskCount }})</button>
			</footer>
		</section>
		<footer id="info">
			<p>Double-click to edit a todo</p>
			<button id="load-demo-data" ng-click="loadDemoData()">Load demo data</button>
		</footer>
		<!-- Scripts here. Don't remove this ↓ -->
		<script src="scripts/angular/angular.js" />
		<script src="scripts/app.todo/_todo.js" />
		<script src="scripts/app.todo/controller.todo.js" />
		<script src="scripts/app.todo/factory.demoDataLoader.js" />
		<script src="scripts/app.todo/factory.taskFactory.js" />
	</body>
</html>
</j2:whitespace>
</j:jelly>